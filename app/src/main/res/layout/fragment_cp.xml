<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonIncreaseOpponent"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPositive"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/buttonIncreaseYou"
        app:layout_constraintEnd_toEndOf="@+id/textViewOpponentsName"
        app:layout_constraintStart_toStartOf="@+id/textViewOpponentsName"
        app:layout_constraintTop_toTopOf="@+id/buttonIncreaseYou" />

    <TextView
        android:id="@+id/textViewYourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewOpponentsName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonIncreaseYou"/>

    <TextView
        android:id="@+id/textViewOpponentsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewYourName"
        app:layout_constraintTop_toTopOf="@+id/textViewYourName" />

    <Button
        android:id="@+id/buttonDecreaseYou"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorNegative"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseYou"
        app:layout_constraintStart_toStartOf="@+id/buttonIncreaseYou"
        app:layout_constraintTop_toBottomOf="@+id/textViewYourCp" />

    <Button
        android:id="@+id/buttonIncreaseYou"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPositive"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/textViewYourName"
        app:layout_constraintStart_toStartOf="@+id/textViewYourName"
        app:layout_constraintTop_toBottomOf="@+id/textViewYourName"
        app:layout_constraintBottom_toTopOf="@id/textViewYourCp"/>

    <Button
        android:id="@+id/buttonDecreaseOpponent"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorNegative"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDecreaseYou"
        app:layout_constraintEnd_toEndOf="@+id/textViewOpponetCp"
        app:layout_constraintStart_toStartOf="@+id/textViewOpponetCp"
        app:layout_constraintTop_toTopOf="@+id/buttonDecreaseYou"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewYourCp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseYou"
        app:layout_constraintStart_toStartOf="@+id/buttonIncreaseYou"
        app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseYou"
        app:layout_constraintBottom_toTopOf="@id/buttonDecreaseYou"/>

    <TextView
        android:id="@+id/textViewOpponetCp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textViewYourCp"
        app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseOpponent"
        app:layout_constraintStart_toStartOf="@+id/buttonIncreaseOpponent"
        app:layout_constraintTop_toTopOf="@+id/textViewYourCp" />

</androidx.constraintlayout.widget.ConstraintLayout>